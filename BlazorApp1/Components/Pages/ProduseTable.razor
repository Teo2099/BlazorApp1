@page "/produse"
@using BlazorApp1.Data
@using BlazorApp1.Models
@inject DbProject1Context _dbContext

<PageTitle>PRODUSE</PageTitle>

<h3>Produse</h3>

    <div class="card">
    <div class="card-body">
        <table class="table table-striped text-md-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Cod</th>
                    <th>Denumire</th>
                    <th>Pret</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in _dbContext.Produses)
                {
                    <tr>
                        <td>@result.Id</td>
                        <td>@result.Cod</td>
                        <td>@result.Denumire</td>
                        <td>@result.PretUnitar</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

